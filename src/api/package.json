{
  "name": "coc-server-api",
  "version": "1.0.0",
  "description": "Node.js API for COC Server Management",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:ci": "NODE_OPTIONS=--experimental-vm-modules jest --coverage --runInBand --detectOpenHandles",
  "test:health": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand -t 'Aggregated health endpoint'",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
  "lint": "eslint \"src/**/*.js\"",
    "fetch:assets": "node scripts/fetch-assets.js",
    "start:dev:container": "sh ./start-dev.sh"
  },
  "keywords": [
    "coc",
    "server-management",
    "api"
  ],
  "author": "nuniesmith",
  "license": "MIT",
  "dependencies": {
    "express": "5.1.0",
    "socket.io": "4.8.1",
    "cors": "2.8.5",
    "helmet": "8.1.0",
    "bcryptjs": "3.0.2",
    "jsonwebtoken": "9.0.2",
    "multer": "2.0.2",
    "winston": "3.17.0",
    "dotenv": "17.2.1",
    "compression": "1.8.1",
    "express-rate-limit": "8.0.1",
    "express-validator": "7.2.1",
    "archiver": "7.0.1",
    "chokidar": "4.0.3",
    "node-cron": "4.2.1",
  "axios": "1.11.0",
  "node-fetch": "3.3.2",
  "redis": "5.8.2",
  "openid-client": "6.6.4",
  "prom-client":"15.1.3",
  "munkres-js": "1.2.2"
  },
  "devDependencies": {
    "nodemon": "3.1.10",
    "jest": "30.0.5",
    "@types/jest": "30.0.0",
  "supertest": "7.1.4",
  "eslint": "9.9.0",
  "eslint-plugin-promise": "6.5.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
