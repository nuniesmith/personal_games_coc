COMPOSE_PROJECT_NAME=coc
NODE_ENV=development
TZ=America/Toronto

# API Configuration
PORT=3001
JWT_SECRET=replace-with-random-hex
COC_API_BASE_URL=https://api.clashofclans.com/v1
